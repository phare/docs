                                        },
                                        "support": {
                                            "description": "Support email address",
                                            "type": "string",
                                            "example": "support@phare.io"
                                        },
                                        "website": {
                                            "description": "Platform website url",
                                            "type": "string",
                                            "example": "https://phare.io"
                                        },
                                        "documentation": {
                                            "description": "API documentation url",
