    "components": {
        "schemas": {
            "meta": {
                "description": "Meta data for pagination",
                "properties": {
                    "current_page": {
                        "type": "number",
                        "example": 2
                    },
                    "from": {
                        "type": "number",
                        "example": 11
                    },
                    "to": {
                        "type": "number",
                        "example": 20
                    },
                    "per_page": {
                        "type": "number",
                        "example": 100
                    },
                    "path": {
                        "type": "string",
                        "example": "{domain}/api/v1/{resource}?page=2"
                    }
                },
                "type": "object"
            },
            "links": {
                "description": "Links for pagination",
                "properties": {
                    "first": {
                        "type": "string",
                        "format": "url",
                        "example": "{domain}/api/v1/{resource}?page=2"
                    },
                    "last": {
                        "type": "string",
                        "format": "url",
                        "example": "{domain}/api/v1/{resource}?page=10",
                        "nullable": true
                    },
                    "prev": {
                        "type": "string",
                        "format": "url",
                        "example": "{domain}/api/v1/{resource}?page=1",
                        "nullable": true
                    },
                    "next": {
                        "type": "string",
                        "format": "url",
                        "example": "{domain}/api/v1/{resource}?page=1",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Uptime.AlertPolicy.Request": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Uptime.AlertPolicy"
                    }
                ]
            },
            "Uptime.Monitor.Request": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Uptime.Monitor"
                    }
                ]
            },
            "Uptime.AlertPolicy.Resource": {
                "allOf": [
                    {
                        "properties": {
                            "id": {
                                "type": "number",
                                "example": 1
                            },
                            "product": {
                                "description": "Phare product that can use the alert policy",
                                "type": "string",
                                "enum": [
                                    "uptime"
                                ]
                            }
                        },
                        "type": "object"
                    },
                    {
                        "$ref": "#/components/schemas/Uptime.AlertPolicy"
                    }
                ]
            },
            "Uptime.Monitor.Resource": {
                "allOf": [
                    {
                        "properties": {
                            "id": {
                                "type": "number",
                                "example": 1
                            },
                            "project_id": {
                                "description": "Parent project ID",
                                "type": "number",
                                "example": 1
                            },
                            "status": {
                                "$ref": "#/components/schemas/Uptime.Monitor.StatusEnum"
                            },
                            "paused": {
                                "description": "Whether the monitor is currently paused",
                                "type": "boolean",
                                "example": true
                            },
                            "one_day_availability": {
                                "description": "Availability in the last 24h, in percents",
                                "type": "number",
                                "example": 99.9999
                            },
                            "one_day_response_time": {
                                "description": "Average response time in the last 24h, in milliseconds",
                                "type": "number",
                                "example": 123,
                                "nullable": true
                            }
                        },
                        "type": "object"
                    },
                    {
                        "$ref": "#/components/schemas/Uptime.Monitor"
                    }
                ]
            },
            "Uptime.AlertPolicy": {
                "required": [
                    "project_id",
                    "name"
                ],
                "properties": {
                    "project_id": {
                        "description": "Restrict the use to a single project ID",
                        "type": "number",
                        "example": 1,
                        "nullable": true
                    },
                    "name": {
                        "description": "Monitor name",
                        "type": "string",
                        "maximum": 30,
                        "minimum": 2,
                        "example": "Website"
                    }
                },
                "type": "object"
            },
            "Uptime.Monitor": {
                "required": [
                    "alert_policy_id",
                    "name",
                    "protocol",
                    "request",
                    "interval",
                    "incident_confirmations",
                    "recovery_confirmations",
                    "regions"
                ],
                "properties": {
                    "alert_policy_id": {
                        "description": "Associated alert policy ID",
                        "type": "number",
                        "example": 1
                    },
                    "name": {
                        "description": "Monitor name",
                        "type": "string",
                        "maximum": 30,
                        "minimum": 2,
                        "example": "Website"
                    },
                    "protocol": {
                        "$ref": "#/components/schemas/Uptime.Monitor.ProtocolEnum"
                    },
                    "request": {
                        "description": "Monitoring request, depends of the chosen protocol",
                        "type": "object",
                        "oneOf": [
                            {
                                "title": "HTTP protocol",
                                "required": [
                                    "method",
                                    "url"
                                ],
                                "properties": {
                                    "method": {
                                        "description": "Request method for http protocol",
                                        "type": "string",
                                        "enum": [
                                            "GET",
                                            "HEAD",
                                            "OPTIONS"
                                        ]
                                    },
                                    "url": {
                                        "description": "Request url for http protocol",
                                        "type": "string",
                                        "maximum": 255,
                                        "example": "https://docs.phare.io/introduction"
                                    },
                                    "keyword": {
                                        "description": "Response keyword that must be present",
                                        "type": "string",
                                        "example": "pong",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            },
                            {
                                "title": "TCP & UPD protocol",
                                "required": [
                                    "host",
                                    "port",
                                    "message"
                                ],
                                "properties": {
                                    "host": {
                                        "description": "Request host for tcp & upd protocol",
                                        "type": "string",
                                        "example": "8.8.8.8"
                                    },
                                    "port": {
                                        "description": "Request port for tcp & upd protocol",
                                        "type": "string",
                                        "maximum": 65536,
                                        "minimum": 0,
                                        "example": "80"
                                    },
                                    "message": {
                                        "description": "Request message for tcp & upd protocol",
                                        "type": "string",
                                        "maximum": 50,
                                        "example": "phare/ping\\r\\n"
                                    },
                                    "keyword": {
                                        "description": "Response keyword that must be present",
                                        "type": "string",
                                        "maximum": 50,
                                        "example": "pong",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        ]
                    },
                    "interval": {
                        "description": "Monitoring interval in seconds",
                        "type": "number",
                        "enum": [
                            30,
                            60,
                            120,
                            180,
                            300,
                            600,
                            900,
                            1800
                        ],
                        "example": 60
                    },
                    "incident_confirmations": {
                        "description": "Number of uninterrupted failed checks required to create an incident",
                        "type": "number",
                        "enum": [
                            1,
                            2,
                            3,
                            4,
                            5
                        ],
                        "example": 1
                    },
                    "recovery_confirmations": {
                        "description": "Number of uninterrupted successful checks required to resolve an incident",
                        "type": "number",
                        "enum": [
                            1,
                            2,
                            3,
                            4,
                            5
                        ],
                        "example": 1
                    },
                    "regions": {
                        "description": "List of regions where monitoring checks are performed",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Uptime.Monitor.RegionEnum"
                        },
                        "maxItems": 6,
                        "minItems": 1
                    }
                },
                "type": "object"
            },
            "Uptime.Monitor.ProtocolEnum": {
                "type": "string",
                "enum": [
                    "http",
                    "tcp"
                ]
            },
            "Uptime.Monitor.RegionEnum": {
                "type": "string",
                "enum": [
                    "as-ind-bom",
                    "as-jpn-nrt",
                    "as-sgp-sin",
                    "eu-deu-muc",
                    "eu-gbr-lhr",
                    "eu-swe-arn",
                    "na-mex-mex",
                    "na-usa-pdx",
                    "na-usa-ric"
                ]
            },
            "Uptime.Monitor.StatusEnum": {
                "type": "string",
                "enum": [
                    "fetching",
                    "online",
                    "offline",
                    "partial"
                ]
            }
        },
        "responses": {
            "401": {
                "description": "Error, access unauthorized",
                "content": {
                    "application/json": {
                        "schema": {
                            "description": "Access unauthorized error schema",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "Unauthenticated."
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            },
            "403": {
                "description": "Error, access forbidden",
                "content": {
                    "application/json": {
                        "schema": {
                            "description": "Access forbidden error schema",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "The phare:write permission is required to perform this action."
